{
  "$schema": "node_modules/@biomejs/biome/configuration_schema.json",
  "css": {
    "linter": {
      "enabled": false
    }
  },
  "files": {
    "includes": [
      "**",
      "!worker-configuration.d.ts",
      "!.wrangler",
      "!prisma",
      "!src/generated"
    ]
  },
  "formatter": {
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  },
  "linter": {
    "rules": {
      "recommended": true
    }
  }
}
